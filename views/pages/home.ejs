<!DOCTYPE html>
<html lang="it">

	<% include ../partials/head %>

	<body class="home">

		<div class="row">

			<div class="small-12 small-centered columns">
			
				<h1>Node doc manager</h1>

			</div>

		</div>

	<%if (!data.length) { %>
		<div class="row">

			<div class="small-8 medium-6 large-5 small-centered columns">
				<h2>No documents</h2>
			</div>

		</div>
	<%
	} else { %>

		<div class="row">
			<a href="/?reverse=<%= !reversed %>">Invert order</a>
		</div>
		
		<% data.forEach((doc) => { %>

		<div class="row">

			<div class="small-8 medium-6 large-5 small-centered columns">

				<div class="header panel">
					<div class="sign">
						<h2><%= doc.title %></h2>
					</div>
					<p>
						<span><%= doc.month %> - <%= doc.year %></span>
						<%= doc.desc %>
					</p>
				</div>

			</div>

		</div>

	<%	}); 
	}
	%>
		
		<% include ../partials/footer %>

	</body>

</html>